{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "prettier-standard",
        "plugin:prettier/recommended",
        "plugin:react/recommended",
        "standard"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "space-before-function-paren": "off",
        "react/prop-types": ["error", { "ignore": ["navigation"] }]
    }
}
